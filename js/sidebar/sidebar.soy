{namespace brkn.sidebar}


/**
 * @param media
 * @param published
 */
{template .info}
  <div class="info">
    <div class="picture">
      <img src="{$media.thumbnail}" class="thumb">
      <div class="publisher">
        <img src="{$media.publisher.picture}">
        <div class="name">{$media.publisher.name}</div>
      </div>
      <div class="title">{$media.name}</div>
      <div class="scrollable ios-scroll">
        <div class="desc-link">
          <a href="#">DESCRIPTION</a>
          <div class="published">{$published}</div>
        </div>
        <div class="description">{$media.description}</div>
      </div>
      <div class="options">
        <div class="button star"></div>
        <div class="button facebook"></div>
        <div class="button twitter"></div>
        <div class="button play"></div>
        <div class="button plus"></div>
      </div>
    </div>
    <div class="viewers" style="display: none">
      <div class="label">SEEN BY</div>
    </div>
    <div class="tweet-holder" style="display:none">
      <div class="label">LATEST TWEETS</div>
      <div class="tweets"></div>
      <div class="dot-nav"></div>
    </div>
    <div class="comments-holder ios-scroll" style="display: none">
      <div class="label">CONVERSATION</div>
      <div class="comments"></div>
    </div>
  </div>
{/template}


/**
 * @param user
 */
{template .viewer}
  <div class="viewer" style="background-color:{$user.color}">
    <img src="{$user.picture}">
  </div>
{/template}


/**
 * @param tweet
 * @param timestamp
 */
{template .tweet}
  <div class="tweet">
    <img src="{$tweet.picture}"/>
    <div class="text">
      <a target="_blank" href="http://www.twitter.com/{$tweet.handle}/status/{$tweet.id}">
        {$tweet.handle}
      </a>{sp}
      {$tweet.text}
    </div>
    <div class="timestamp">{$timestamp}</div>
  </div>
{/template}

/**
 * @param comment
 * @param timestamp
 */
{template .comment}
  <div class="comment">
    <img src="{$comment.user.picture}"/>
    <div class="text">
      <a href="#">{$comment.user.name}</a>{sp}
      {$comment.text}
    </div>
    <div class="timestamp">{$timestamp}</div>
  </div>
{/template}


/**
 */
{template .commentInput}
  <div class="comment-input">
    <div class="comment-controls">
      <div class="comment-button tweet-toggle">tweet<div class="check"></div></div>
      <div class="comment-button fb-toggle">post<div class="check"></div></div>
      <div class="comment-button add-comment">add</div>
    </div>
    <div class="input-holder">
      <textarea class="comment-textarea" rows="1" placeholder="Add to the conversation..."></textarea>
    </div>
  </div>
{/template}


/**
 * @param session
 * @param? channel
 * @param user
 * @param time
 */
{template .sessionActivity}
  <div class="activity">
    <div class="picture" style="background:{$user.color}">
      <img src="{$user.picture}"/>
    </div>
    <div class="text">
      <a class="user" href="#">{$user.name}</a>{sp}
      {if $session.tune_out}watched{else}is watching{/if}
      {if $channel}{sp}<a href="#">{$channel.name}</a>{/if}
      <div class="timestamp">{$time}</div>
    </div>
    <div class="medias"></div>
  </div>
{/template}


/**
 * @param comment
 * @param user
 * @param time
 */
{template .commentActivity}
  <div class="activity">
    <div class="picture" style="background:{$user.color}">
      <img src="{$user.picture}"/>
    </div>
    <div class="text">
      <a class="user" href="#">{$user.name}</a>{sp}
      "{$comment.text}"
      <div class="timestamp">{$time}</div>
    </div>
    <div class="medias"></div>
  </div>
{/template}


/**
 * @param thumbnail
 * @param description
 * @param link
 */
{template .listInfo}
  <div class="list-info">
    <div class="picture-cell" {if $thumbnail}style="display:table-cell"{/if}>
      {if $link}<a href="{$link}" target="_blank">{/if}<div class="picture">
        <img class="thumb" src="{$thumbnail}">
      </div>{if $link}</a>{/if}
    </div>
    <div class="description" {if $description}style="display:table-cell"{/if}>{$description}</div>
  </div>
{/template}


/**
 * @param media
 */
{template .mediaPreview}
  <div class="media">
    <div class="preview">
      <div class="thumb" style="background-image:url({$media.thumbnail});
          background-position: 50% {$media.thumbPos}%"></div>
      <div class="title">{$media.name}</div>
    </div>
  </div>
{/template}


/**
 * @param name
 * @param className
 */
{template .tab}
  <li class="{$className}{sp}tab">
    <div class="label">{$name}</div>
  </li>
{/template}


/**
 */
{template .admin}
  <div class="admin">
    <div class="scrollable ios-scroll">
      <div class="search">
        <input type="text" />
      </div>
      <div class="results">
      </div>
      <div class="section" style="display:none">
        <div class="label">CHANNELS</div>
        <div class="admin-channels"></div>
      </div>
      <div class="section" style="display:none">
        <div class="label">CURRENT TOPICS</div>
        <div class="topics"></div>
      </div>
      <div class="section" style="display:none">
        <div class="label">COLLECTIONS</div>
        <div class="collections"></div>
      </div>
    <div class="scroll-area">
  </div>
{/template}


/**
 */
{template .adminList}
  <div class="admin-list admin">
    <div class="search">
      <input class="input" type="text" placeholder="Paste video or playlist link" />
    </div>
    <div class="tabbed pending">
      <ul class="tabs">
        <li class="tab pending">
          <div class="label">PENDING</div>
        </li>
        <li class="tab all">
          <div class="label">ALL</div>
        </li>
        <li class="tab playlists">
          <div class="label">PLAYLISTS</div>
        </li>
      </ul>
      <div class="pending-content content pending"></div>
      <div class="all-content content all"></div>
      <div class="playlists-content content playlists"></div>
      <div class="spinner" style="display:none">Loading More</div>
  </div>
{/template}


/**
 * @param playlist
 */
{template .playlist}
  <div class="playlist">
    <div class="title">{$playlist.name}</div>
  </div>
{/template}


/**
 * @param channel
 */
{template .channel}
  <div class="channel">
    <div class="title">{$channel.name}</div>
    {if $channel.pending}
      <div class="pending">{$channel.pending}</div>
    {/if}
  </div>
{/template}


/**
 * @param collection
 */
{template .collection}
  <div class="collection">
    <div class="title">{$collection.name}</div>
    {if $collection.pending}
      <div class="pending">{$collection.pending}</div>
    {/if}
  </div>
{/template}


/**
 * @param topic
 * @param pending
 */
{template .topic}
  <div class="topic">
    <div class="title">{$topic}</div>
    {if $pending}
      <div class="pending">{$pending}</div>
    {/if}
  </div>
{/template}


/**
 */
{template .profile}
  <div class="tabbed activity">
    <ul class="tabs">
      <li class="tab activity">
        <div class="label">ACTIVITY</div>
      </li>
      <li class="tab starred">
        <div class="label">STARRED</div>
      </li>
    </ul>
    <div class="activity-content content activity"></div>
    <div class="starred-content content starred"></div>
    <div class="spinner" style="display:none">Loading More</div>
  </div>
{/template}


/**
 * @param media
 */
{template .listMedia}
  <div class="list-media show">
    <div class="media">
      <div class="preview">
        <div class="thumb" style="background-image:url({$media.thumbnail});
            background-position: 50% {$media.thumbPos}%"></div>
        <div class="title">{$media.name}</div>
      </div>
    </div>
    <div class="publisher">
      <img src="{$media.publisher.picture}">
      <div class="name">{$media.publisher.name}</div>
      <div class="duration">{$media.duration} seconds</div>
    </div>
  </div>
{/template}


/**
 * @param media
 * @param published
 */
{template .adminMedia}
  <div class="admin-media list-media">
    <div class="media">
      <div class="preview">
        <div class="thumb" style="background-image:url({$media.thumbnail});
            background-position: 50% {$media.thumbPos}%"></div>
        <div class="title">{$media.name}</div>
        <div class="published">{$published}</div>
        <div class="play"></div>
        <div class="approve"></div>
        <div class="remove"></div>
        <div class="repos"></div>
      </div>
    </div>
    <div class="publisher">
      <img src="{$media.publisher.picture}">
      <div class="name">{$media.publisher.name}</div>
      <div class="duration">{$media.duration} seconds</div>
    </div>
    <div class="description">{$media.description}</div>
  </div>
{/template}
